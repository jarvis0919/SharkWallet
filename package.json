{
  "name": "SharkWallet",
  "productName": "SharkWallet",
  "version": "1.1.1",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "chcp 65001 && electron-forge start",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "asar": false
  },
  "build": {
    "productName": "SharkWallet",
    "appId": "com.leon.SharkWallet",
    "copyright": "from_Li",
    "directories": {
      "output": "new"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./img/logo3.ico",
      "uninstallerIcon": "./img/logo3.ico",
      "installerHeaderIcon": "./img/logo3.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SharkWallet"
    },
    "win": {
      "icon": "./img/A.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jarvis0919/SharkWallet.git"
  },
  "keywords": [],
  "author": "92059",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "wallet"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "crypto-js": "^4.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.6.1",
    "ethereumjs-tx": "^1.3.3",
    "ethereumjs-util": "^7.1.3",
    "ethereumjs-wallet": "^1.0.2",
    "fs": "^0.0.1-security",
    "node-fetch": "^3.0.0",
    "qrcode": "^1.5.0",
    "update-electron-app": "^2.0.1",
    "userhome": "^1.0.0",
    "web3": "^1.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "15.1.2",
    "electron-builder": "^22.14.5"
  }
}